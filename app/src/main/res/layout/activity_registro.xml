<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:padding="10dp"
            android:background="@color/bgVerde"
            android:orientation="vertical">
            <TextView
                android:text="Crear cuenta"

                android:textColor="@color/colorBackground"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
          <TextView
              android:text="Registrar datos"
              android:textColor="@color/colorBackground"
              android:textSize="23sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

          </TextView>



        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <EditText
            android:id="@+id/id_etdni"
           android:text=""
            android:hint="Dni"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <Button
            android:id="@+id/id_btnconsultar"
            android:text="Consultar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>

        <TextView
            android:id="@+id/id_tvdnombre"
            android:hint="Nombres"
            android:textSize="19sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/id_tvapellidopaterno"
            android:hint="Apellidos"
            android:textSize="19sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <EditText
            android:id="@+id/id_etcorreo"
           android:hint="Correo"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <EditText
            android:id="@+id/id_etclave"
            android:hint="ContraseÃ±a"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:id="@+id/id_etcelular"
            android:inputType="phone"
            android:hint="celular"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <Spinner
            android:id="@+id/id_spincargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

        </Spinner>
        <Button
            android:id="@+id/id_btnregistrar"
            android:text="Registrar"
            android:layout_width="match_parent"
            android:layout_height="60dp">

        </Button>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>